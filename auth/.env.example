# Configura��o do Banco de Dados PostgreSQL
# DATABASE_URL deve estar no formato: postgresql://usuario:senha@host:porta/nome_banco_de_dados
# Exemplo para desenvolvimento local com Docker: postgresql://coral_user:senha123@postgres:5432/coral_db
DATABASE_URL=postgresql://coral_user:senha123@postgres:5432/coral_db

# Configura��o da Porta da Aplica��o
# Porta em que o servi�o de autentica��o ser� executado
AUTH_PORT=8084

# Configura��o Base URL (fornecida pelo docker-compose)
# Esta vari�vel � definida automaticamente pelo docker-compose
AUTH_APP_BASE_URL=http://localhost/api/auth

# Configura\u00e7\u00e3o de Seguran\u00e7a JWT
# SECRET_KEY: Chave secreta para assinar tokens JWT (altere para uma chave segura em produ\u00e7\u00e3o)
# Gere uma chave segura com: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=sua-chave-secreta-muito-segura-aqui
ALGORITHM=HS256

# Configura\u00e7\u00e3o de Email (opcional, usado para redefini\u00e7\u00e3o de senha)
# EMAIL_FROM: Email do remetente
# EMAIL_PASSWORD: Senha ou token do email
EMAIL_FROM=seu-email@gmail.com
EMAIL_PASSWORD=sua-senha-de-app
